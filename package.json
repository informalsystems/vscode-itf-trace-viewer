{
	"name": "itf-trace-viewer",
	"displayName": "ITF Trace Viewer",
	"description": "View nicely formatted ITF trace files",
	"version": "0.0.5",
	"author": {
		"name": "Hern√°n Vanzetto",
		"email": "hernan@informal.systems",
		"url": "https://github.com/hvanz"
	},
	"publisher": "informal",
	"repository": {
		"type": "git",
		"url": "https://github.com/informalsystems/vscode-itf-trace-viewer"
	},
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Visualization"
	],
	"activationEvents": [
		"onLanguage:itf",
		"onCommand:itf-trace-viewer.viewFormattedTrace",
		"onWebviewPanel:itf-trace-viewer"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "itf",
				"aliases": [
					"ITF"
				],
				"extensions": [
					".itf.json",
					".itf"
				]
			}
		],
		"keybindings": [
			{
				"command": "itf-trace-viewer.viewFormattedTrace",
				"key": "shift+ctrl+v",
				"mac": "shift+cmd+v",
				"when": "editorLangId == itf"
			}
		],
		"commands": [
			{
				"command": "itf-trace-viewer.viewFormattedTrace",
				"category": "ITF",
				"title": "View formatted trace"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "editorLangId == itf",
					"command": "itf-trace-viewer.viewFormattedTrace",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"when": "resourceLangId == itf",
					"command": "itf-trace-viewer.viewFormattedTrace",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"when": "resourceLangId == itf",
					"command": "itf-trace-viewer.viewFormattedTrace",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"test-compile": "tsc -p ./",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.70.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"@vscode/test-electron": "^2.1.5",
		"esbuild": "^0.15.7",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.1",
		"typescript": "^4.7.4",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0"
	}
}
